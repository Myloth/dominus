{% trans_default_domain 'users' %}
{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="border-bottom-secondary px-3">
        <h1>{{ 'user.new.title' | trans }}</h1>
    </div>
    <div class="col-md-12 mt-2">
        <div class="card shadow mb4">
            <div class="card-header py-3">
                {{ 'user.new.card.header' | trans }}
            </div>
            <div class="card-body">
                <div class="row col-md-12">
                    <div class="col-md-2 d-inline">
                        {{ form_label(form.userType) }}
                    </div>
                    <div class="col-md-3 d-inline">
                        {{ form_widget(form.userType) }}
                    </div>
                </div>
                <div class="row col-md-12">
                    <div class="col-md-6 d-inline">
                        <div class="col-md-2 d-inline">
                            {{ form_label(form.username) }}
                        </div>
                        <div class="col-md-3 d-inline">
                            {{ form_widget(form.username) }}
                        </div>
                    </div>
                    <div class="col-md-6 d-inline">
                        <div class="col-md-2 d-inline">
                            {{ form_label(form.email) }}
                        </div>
                        <div class="col-md-3 d-inline">
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                </div>
                <div class="row col-md-12">
                    <div class="col-md-12 d-inline">
                        <div class="col-md-2 d-inline">
                            {{ form_label(form.groups) }}
                        </div>
                        <div class="col-md-5 d-inline">
                            {{ form_widget(form.groups) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}