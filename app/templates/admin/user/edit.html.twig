{% trans_default_domain 'users' %}
{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="border-bottom-secondary px-3">
        <h1>{{ 'user.edit.title' | trans }}</h1>
    </div>

    <div class="col-md-12 mt-2">
    <div class="card shadow mb4">
    <div class="card-header py-3">
        {{ user.username }} - {{ user.type }}
    </div>
    <div class="card-body">
        {% block editUserForm %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-edit') }}
{% endblock %}